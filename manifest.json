{
  "name": "Librus Plus",
  "description": "NAPISAÄ† OPIS",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "assets/librusplus-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.librus.pl/*"],
      "js": ["content/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*.librus.pl/*"]
    }
  ],
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://*.librus.pl/*"]
}
